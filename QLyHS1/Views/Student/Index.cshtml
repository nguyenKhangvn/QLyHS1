@model IEnumerable<QLyHS1.Models.StudentViewModel>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ học sinh</title>
    <link rel="stylesheet" href="~/css/Base.css">
    <link rel="stylesheet" href="~/css/student.css">
</head>
<body>
    <div class="container_form">

        <div class="main_content">
            <h1>Hồ sơ học sinh</h1>

            <div class="search-container">
                <form name="SearchForm" asp-action="Search" asp-controller="Student">
                    <input type="text" placeholder="Tìm kiếm" name="query">
                    <button class="btn-search">Tìm kiếm</button>
                </form>
                <button class="btn-add" onclick="location.href='@Url.Action("Add", "Student")'">+</button>
          
               <form method="get" asp-action="Index">
                    <label for="className">Lọc theo lớp:</label>
                    <select name="className" id="className" onchange="this.form.submit()">
                        <option value="">-- Chọn lớp --</option>
                        @if (ViewBag.Classrooms != null)
                        {
                            foreach (SelectListItem classroom in ViewBag.Classrooms)
                            {
                                <option value="@classroom.Value">@classroom.Text</option>
                            }
                        }
                    </select>
                </form>
                <button class="btn-refresh">⟲</button>
            </div>

            <div class="list-container">
                <ul class="styled-top">            
                    <li>STT</li>
                    <li>Họ tên</li>
                    <li>Giới tính</li>
                    <li>Ngày sinh</li>
                    <li>Lớp</li>
                    <li>Địa chỉ</li>
                    <li>Liên hệ phụ huynh</li>      
                </ul>
                <div class="styled-list">              
                    @if (Model != null && Model.Any())
                    {
                        int stt = 1;
                        foreach (var student in Model)
                        {
                            <ul>
                                <li>@stt</li>
                                <li>@student.Name</li>
                                <li>@student.Gender</li>
                                <li>@student.Birthday</li>
                                <li>@student.ClassName</li>
                                <li>@student.Address</li>
                                <li>@student.ParentPhone</li>
                                <li>
                                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                                </li>
                            </ul>
                            stt++;
                        }
        
                    }
                    else
                    {
                            <li colspan="7">Không có dữ liệu học sinh.</li>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
