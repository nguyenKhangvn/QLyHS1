@model QLyHS1.Models.StudentDetailViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ học sinh</title>
    <link rel="stylesheet" href="~/css/student.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            margin: 40px 40px 0 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            display: block;
            font-weight: bold;
            //margin-bottom: 5px;
            color: #555;
            margin: 28px 0 0 0;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin: 0 0 0 200px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #0056b3;
            }

        a {
            text-decoration: none;
            color: #007bff;
            display: inline-block;
            margin-top: 20px;
        }

            a.btn-secondary {
                background-color: #6c757d;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
            }

                a.btn-secondary:hover {
                    background-color: #5a6268;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Thêm Học Sinh</h1>
        <form asp-action="Add" asp-controller="Student" method="post">
            <div class="form-group">
                <label for="ClassID" class="control-label">Tên lớp:</label>
                <select id="ClassID" asp-for="ClassID" asp-items="ViewBag.Classroom" class="form-control">
                    <option value="">-- Chọn lớp --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên Học Sinh:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender" class="control-label">Giới Tính</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Ngày Sinh:</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label">Số điện thoại:</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneParent" class="control-label">Liên hệ phụ huynh:</label>
                <input asp-for="PhoneParent" class="form-control" />
                <span asp-validation-for="PhoneParent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Địa Chỉ:</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conduct" class="control-label">Hạnh kiểm:</label>
                <input asp-for="Conduct" class="form-control" />
                <span asp-validation-for="Conduct" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Thêm học sinh</button>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
