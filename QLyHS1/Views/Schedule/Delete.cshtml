@model QLyHS1.Data.Schedule
@{
    ViewData["Title"] = "Xóa Thời khóa biểu";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí học sinh</title>
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Detail.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">

</head>

<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <p>Xóa Thời khóa biểu</p>
            <button onclick="window.location.href='@Url.Action("Index", "Student")'" class="btn-back">Quay lại</button>
        </div>
            <!-- -------------------------------------- -->
            <form asp-action="Delete" asp-controller="Schedule" method="post" class="form_1">
           
                <div class="detail-item">
                    <strong>Tên lớp</strong> @Model.ClassRoom
                </div>
                <div class="detail-item">
                    <strong>Ngày trong tuần</strong> @Model.DayOfWeek
                </div>
                <div class="detail-item">
                    <strong>Ngày bắt đầu</strong> @Model.StartTime
                </div>
                <div class="detail-item">
                    <strong>Ngày kết thúc</strong> @Model.EndTime
                </div>
                <div class="detail-item">
                    <strong>Thông tin</strong> @Model.Infomation
                </div>
                <div class="detail-item">
                    <strong>Môn học</strong> @Model.Subject.Name
                </div>
                <div class="btn_form">
                    <a asp-action="Index" class="cancel-btn">Hủy</a>
                    <button class="btn-back btn_save" type="submit">Xóa</button>
                </div>
        </form>
    </div>

</body>

</html>