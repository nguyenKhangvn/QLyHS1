            <button class="btn-add" onclick="location.href='@Url.Action("Add", "Schedule")'">+</button>
            <div class="schedule-container">
              
                <ul class="styled-top">
                    <li>Số thứ tự</li>
                    <li>Tên môn học</li>
                    <li>Tên giáo viên</li>
                    <li>Phòng học</li>
                    <li>Thông tin</li>
                    <li>Ngày bắt đầu</li>
                    <li>Ngày kết thúc</li>
                </ul>

                <div class="styled-list">
                    @if (Model != null && Model.Any())
                    {
                        int stt = 1;
                        foreach (var schedule in Model)
                        {
                            <ul>
                                <li>@stt</li>
                                <li>@schedule.SubjectName</li>
                                <li>@schedule.TeacherName</li>
                                <li>@schedule.ClassRoom</li>
                                <li>@schedule.Infomation</li>
                                <li>@schedule.StartTime</li>
                                <li>@schedule.EndTime</li>
                                <li>
                                    <a asp-action="Edit" asp-route-id="@schedule.Id">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@schedule.Id">Delete</a>
                                </li>
                            </ul>
                            stt++;
                        }

                    }
                    else
                    {
                        <li colspan="7">Không có dữ liệu thời khóa biểu.</li>
                    }
                </div>
        </div>
    </div>
