@model IEnumerable<QLyHS1.Models.ScheduleViewModel>
@{
    ViewData["Title"] = "Thời khóa biểu";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí học sinh</title>
    <link rel="stylesheet" href="~/CSSP/Students.css">
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
</head>

<body>
    <div class="table-container">
        <div class="table_top">
            <div class="group_top">
                <form name="SearchForm" asp-action="Search" asp-controller="Student">
                    <input class="input_search" type="text" placeholder="Tìm kiếm" name="query">
                    <button class="btn-search"> <i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
                <button onclick="window.location.href='@Url.Action("Add", "Schedule")'" class="btn-add" onclick="">+</button>
                <button class="btn-refresh">⟲</button>
            </div>
            <div class="group_top">
                <a href="" class="btn-text">Xuất Excel</a>
            </div>
        </div>
        <div class="table_form">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th class="wide">STT</th>
                        <th>Tên môn học</th>
                        <th>Tên giáo viên</th>
                        <th>Phòng học</th>
                        <th>Thông tin</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Thiết lập</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int stt = 1;
                        foreach (var schedule in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@schedule.SubjectName</td>
                                <td>@schedule.TeacherName</td>
                                <td>@schedule.ClassRoom</td>
                                <td><p>>@schedule.Infomation</p</td>
                                <td>@schedule.StartTime</td>
                                <td>@schedule.EndTime</td>
                                <td>
                                    <div class="table_funtion" style="display: block;">
                                        <a asp-action="Details" asp-route-id="@schedule.Id">Xem chi tiết</a>
                                        <p></p>
                                        <a asp-action="Edit" asp-route-id="@schedule.Id">Cập nhật thông tin</a>
                                        <p></p>
                                        <a asp-action="Delete" asp-route-id="@schedule.Id">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                            stt++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Không có dữ liệu thời khóa biểu.</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</body>

</html>
