@model QLyHS1.Models.ScheduleDetailViewModel
@{
    ViewData["Title"] = "Thêm thời khóa biểu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Update.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
</head>
<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <p>Thêm thời khóa biểu</p>
            <button onclick="window.location.href='@Url.Action("Index", "Schedule")'" class="btn-back">Quay lại</button>
        </div>
        <form asp-action="Add" asp-controller="Schedule" method="post" class="Form_Add">
            <div class="form-group">
                <label for="SubjectId" class="control-label">Tên môn:</label>
                <select id="SubjectId" asp-for="SubjectId" asp-items="ViewBag.Subject" class="form-control">
                    <option value="">-- Chọn môn --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="TeacherId" class="control-label">Tên giáo viên:</label>
                <select id="TeacherId" asp-for="TeacherId" asp-items="ViewBag.Teacher" class="form-control">
                    <option value="">-- Chọn giáo viên --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DayOfWeeks" class="control-label">Ngày trong tuần:</label>
                <select asp-for="DayOfWeeks" class="form-control" class="size_1">
                    <option value="Thứ 2">Thứ 2</option>
                    <option value="Thứ 3">Thứ 3</option>
                    <option value="Thứ 4">Thứ 4</option>
                    <option value="Thứ 5">Thứ 5</option>
                    <option value="Thứ 6">Thứ 6</option>
                    <option value="Thứ 7">Thứ 7</option>

                </select>
            </div>

            <div class="form-group">
                <label asp-for="PeriodStudy" class="control-label">Tiết học:</label>
                <select asp-for="PeriodStudy" class="form-control" class="size_1">
                    <option value="Tiết 1">Tiết 1</option>
                    <option value="Tiết 2">Tiết 2</option>
                    <option value="Tiết 3">Tiết 3</option>
                    <option value="Tiết 4">Tiết 4</option>
                    <option value="Tiết 5">Tiết 5</option>
                    <option value="Tiết 6">Tiết 6</option>
                    <option value="Tiết 7">Tiết 7</option>
                    <option value="Tiết 8">Tiết 8</option>
                    <option value="Tiết 9">Tiết 9</option>
                    <option value="Tiết 10">Tiết 10</option>

                </select>
            </div>

            <div class="form-group">
                <label for="ClassRoom" class="control-label">Chọn lớp:</label>
                <select id="ClassRoom" asp-for="ClassRoom" asp-items="ViewBag.Room" class="form-control">
                    <option value="">-- Chọn lớp --</option>
                </select>
            </div>


            <div class="form-group">
                <label for="DayOfWeek" class="control-label">Số tuần:</label>
                <input type="number" id="DayOfWeek" name="DayOfWeek" required />
            </div>

            <div class="form-group">
                <label for="Infomation" class="control-label">Ghi chú:</label>
                <input type="text" id="Infomation" name="Infomation" required />
            </div>
            <div class="form-group">
                <label for="StartTime" class="control-label">Ngày bắt đầu:</label>
                <input type="date" id="StartTime" name="StartTime" required />
            </div>
            <div class="form-group">
                <label for="EndTime" class="control-label">Ngày kết thúc:</label>
                <input type="date" id="EndTime" name="EndTime" required />
            </div>
            <div class="btn_form">
                <a asp-action="Index" class="cancel-btn">Hủy</a>
                <button class="btn-back btn_save" type="submit">Thêm</button>
            </div>
        </form>
    </div>
</body>
</html>
