@model QLyHS1.Models.SubjectViewModel
@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin Môn Học";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chỉnh Sửa Môn học</title>
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Update.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
</head>
<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <h2>Chỉnh Sửa Thông Tin Môn học</h2>
            <button onclick="window.location.href='@Url.Action("Index", "Subject")'" class="btn-back">Quay lại</button>
        </div>
        <form asp-action="Edit" asp-controller="Subject" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name">Môn học:</label>
                <input type="text" asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status">Trạng thái: </label>
                <select asp-for="Status" class="form-control">
                    <option value="true">Hoạt động</option>
                    <option value="false">Không</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateAt">Ngày tạo: </label>
                <input asp-for="CreateAt" class="form-control" type="date" />
                <span asp-validation-for="CreateAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateAt">Ngày chỉnh sửa:</label>
                <input asp-for="UpdateAt" class="form-control" type="date" />
                <span asp-validation-for="UpdateAt" class="text-danger"></span>
            </div>

            <div class="btn_form">
                <a asp-action="Index" class="cancel-btn">Hủy</a>
                <button class="btn-back btn_save" type="submit">Lưu Thay Đổi</button>
            </div>
        </form>
    </div>
</body>
</html>
