@model IEnumerable<QLyHS1.Models.SubjectDetailViewModel>
@{
    ViewData["Title"] = "Thêm Môn Học";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ học sinh</title>
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Update.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">

</head>

<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <h1>Thêm Môn học</h1>
        </div>
        <form asp-action="Add" asp-controller="Subject" method="post" class="form_1">
            <div class="form-group">
                <label for="Name">Tên môn học:</label>
                <input type="text" id="Name" name="Name" class="form-control" required />
            </div>  
           
            <div class="btn_form">
                <a asp-action="Index" class="cancel-btn">Hủy</a>
                <button type="submit" name="Add" value="Add" class="btn-back btn_save">Thêm</button>
            </div>
        </form>
        
    </div>
</body>
</html>
