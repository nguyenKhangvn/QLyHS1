@model QLyHS1.Data.Subject
@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết giáo viên</title>
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Detail.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">

</head>
<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <p>Chi tiết giáo viên</p>
            <button onclick="window.location.href='@Url.Action("Index", "Subject")'" class="btn-back">Quay lại</button>
        </div>
        <div class="detail-item">
            <strong>Họ và tên:</strong> @Model.Name
        </div>
         
        <div class="detail-item">
            <strong>Trạng thái:</strong> @(Model.Status ? "Hoạt động" : "Tạm dừng")
        </div>
        <div class="detail-item">
            <strong>Ngày tạo:</strong> @string.Format("{0:dd/MM/yyyy}", Model.CreateAt)
        </div>
        <div class="detail-item">
            <strong>Cập nhật lần cuối:</strong> @string.Format("{0:dd/MM/yyyy}", Model.UpdateAt)
        </div>
    </div>
</body>
</html>


