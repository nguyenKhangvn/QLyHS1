@model IEnumerable<QLyHS1.Models.GradeViewModel>
@{
    ViewData["Title"] = "Quản lý Điểm";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Điểm</title>
    <link rel="stylesheet" href="~/css/Base.css">
    <link rel="stylesheet" href="~/css/Score.css">
</head>
<body>
    <div class="container_form">
        <div class="main-content">
            <h1>Hồ sơ Điểm số</h1>

            <div class="search-container">
                <form name="SearchForm" asp-action="Search" asp-controller="Grade">
                    <input type="text" placeholder="Tìm kiếm" name="query">
                    <button class="btn-search">Tìm kiếm</button>
                </form>
                <button class="btn-add" onclick="location.href='@Url.Action("Add", "Grade")'">+</button>
                <form method="get" asp-action="Index">
                    <label for="className">Lọc theo lớp</label>
                    <select name="className" id="className" onchange="this.form.submit()">
                        <option value="">-- Chọn lớp --</option>
                        @if (ViewBag.Classrooms != null)
                        {
                            foreach (SelectListItem classroom in ViewBag.Classrooms)
                            {
                                <option value="@classroom.Value">@classroom.Text</option>
                            }
                        }
                    </select>
                </form>

                <button class="btn-refresh">⟲</button>
                <a asp-action="ExportToExcel" asp-controller="Grade" class="btn btn-success">Xuất Excel</a>
                <form asp-action="ImportFromExcel" asp-controller="Grade" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="excelFile">Chọn file Excel:</label>
                        <input type="file" name="excelFile" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success mt-2">Nhập bằng Excel</button>
                </form>

            </div>

            <div class="list-container">
                <ul class="styled-top">
                    <li>STT</li>
                    <li>Tên học sinh</li>
                    <li>Học kì</li>
                    <li>Tên môn</li>
                    <li>Năm học</li>
                    <li>
                        Điểm hệ số 1
@*                         <button class="btn-add" onclick="location.href='@Url.Action("AddGrade", "Grade", new { gradeType = 1 })'">+</button>
 *@                    </li>
                    <li>
                        Điểm hệ số 2
                       
                    </li>
                    <li>
                        Điểm hệ số 3
@*                         <button class="btn-add" onclick="location.href='@Url.Action("AddGrade", "Grade", new { gradeType = 3 })'">+</button>
 *@                    </li>

                </ul>
                <div class="styled-list">
                    @if (Model != null && Model.Any())
                    {
                        int stt = 1;
                        foreach (var student in Model)
                        {
                            <ul>
                                <li>@stt</li>
                                <li>@student.StudentName</li>
                                <li>@student.SemesterName</li>
                                <li>@student.SubjectName</li>
                                <li>@student.SchoolYearName</li>
                                <td>
                                    <input type="number" name="Grades[@student.Id].GradeI" value="@student.GradeI" class="form-control" />
                                    <a asp-action="AddGrade" asp-route-id="@student.Id">+</a>
                                </td>
                                <td>
                                    <input type="number" name="Grades[@student.Id].GradeII" value="@student.GradeII" class="form-control" />
                                    <a asp-action="AddGrade" asp-route-id="@student.Id">+</a>
                                </td>
                                <td>
                                    <input type="number" name="Grades[@student.Id].GradeIII" value="@student.GradeIII" class="form-control" />
                                    <a asp-action="AddGrade" asp-route-id="@student.Id">+</a>
                                </td>
                                <li>
                                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                                </li>
                            </ul>
                            stt++;
                        }

                    }
                    else
                    {
                            <li colspan="7">Không có dữ liệu Điểm.</li>
                    }
                 </div>
            </div>
        </div>
    </div>
</body>
</html>
