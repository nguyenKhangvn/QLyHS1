@model QLyHS1.Models.GradeDetailViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ lớp học</title>
    <link rel="stylesheet" href="~/css/student.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            margin: 40px 40px 0 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            display: block;
            font-weight: bold;
            color: #555;
            margin: 28px 0 0 0;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin: 0 0 0 200px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #0056b3;
            }

        a {
            text-decoration: none;
            color: #007bff;
            display: inline-block;
            margin-top: 20px;
        }

            a.btn-secondary {
                background-color: #6c757d;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
            }

                a.btn-secondary:hover {
                    background-color: #5a6268;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Thêm lớp học</h1>
        <form asp-action="Add" asp-controller="Grade" method="post">
            <div class="form-group">
                <label for="StudentId" class="control-label">Student ID:</label>
                 <select id="StudentId" asp-for="StudentId" asp-items="ViewBag.Student" class="form-control">
                    <option value="">-- Chọn học sinh--</option>
                </select>
            </div>
            <div class="form-group">
                <label for="SemesterId" class="control-label">SemesterId ID:</label>
                <select id="SemesterId" asp-for="SemesterId" asp-items="ViewBag.Semester" class="form-control">
                    <option value="">-- Chọn kì học--</option>
                </select>
            </div>
            <div class="form-group">
                <label for="SubjectId" class="control-label">SubjectId ID:</label>
               <select id="SubjectId" asp-for="SubjectId" asp-items="ViewBag.Subject" class="form-control">
                    <option value="">-- Chọn môn học--</option>
                </select>
            </div>
            <div class="form-group">
                <label for="SchoolYearId" class="control-label">SchoolYearId ID:</label>
                 <select id="SchoolYearId" asp-for="SchoolYearId" asp-items="ViewBag.SchoolYear" class="form-control">
                    <option value="">-- Chọn năm học--</option>
                </select>
            </div>
            <div class="form-group">
                <label for="GradeI" class="control-label">GradeI:</label>
                <input type="text" id="GradeI" name="GradeI" required />
            </div>
            <div class="form-group">
                <label for="GradeII" class="control-label">GradeII:</label>
                <input type="quantity" id="GradeII" name="GradeII" required />
            </div
            <div class="form-group">
                <label for="GradeIII" class="control-label">GradeII:</label>
                <input type="quantity" id="GradeIII" name="GradeIII" required />
            </div>

            <button type="submit" name="Add" value="Add">Add Grade</button>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
