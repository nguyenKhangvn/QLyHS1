@model QLyHS1.Data.Grade
@{
    ViewData["Title"] = "Quản lý Điểm";
}
<link rel="stylesheet" href="~/CSSP/Base.css">
<link rel="stylesheet" href="~/CSSP/Hearder.css">
<link rel="stylesheet" href="~/CSSP/Menu.css">
<link rel="stylesheet" href="~/CSSP/Detail.css">
<link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <p>Xóa Điểm học sinh</p>
            <button onclick="window.location.href='@Url.Action("Index", "Grade")'" class="btn-back">Quay lại</button>
        </div>
          <form asp-action="Delete" asp-controller="Grade" method="post" class="form_1">
            <div class="detail-item">
                <strong>Sinh viên:</strong> @Model.Student.Name
            </div>
            <div class="detail-item">
                <strong>Học kỳ:</strong> @Model.Semester.Name
            </div>
            <div class="detail-item">
                <strong>Môn học:</strong> @Model.Subject.Name
            </div>
            <div class="detail-item">
                <strong>Năm học:</strong> @Model.SchoolYear.Year
            </div>
            <div class="detail-item">
                <strong>Lớp:</strong> @Model.Classroom.Name
            </div>
            <div class="detail-item">
                <strong>Điểm I:</strong> @Model.GradeI
            </div>
            <div class="detail-item">
                <strong>Điểm II:</strong> @Model.GradeII
            </div>
            <div class="detail-item">
                <strong>Điểm Học Kỳ:</strong> @Model.GradeSemester
            </div>
            <div class="detail-item">
                <strong>Ngày tạo:</strong> @Model.CreateAt
            </div>
            <div class="detail-item">
                <strong>Ngày cập nhật:</strong> @Model.UpdateAt
            </div>
            <div class="detail-item">
                <strong>Trạng thái:</strong> @Model.Status
            </div>
           
            <div class="btn_form">
                <a asp-action="Index" class="cancel-btn">Hủy</a>
                <button class="btn-back btn_save" type="submit">Xóa</button>
            </div>
        </form>
    </div>

</body>