@model IEnumerable<QLyHS1.Models.ClassroomDetailViewModel>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ lớp học</title>
    <link rel="stylesheet" href="~/css/student.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            margin: 40px 40px 0 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            display: block;
            font-weight: bold;
            color: #555;
            margin: 28px 0 0 0;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin: 0 0 0 200px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #0056b3;
            }

        a {
            text-decoration: none;
            color: #007bff;
            display: inline-block;
            margin-top: 20px;
        }

            a.btn-secondary {
                background-color: #6c757d;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
            }

                a.btn-secondary:hover {
                    background-color: #5a6268;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Thêm lớp học</h1>
        <form asp-action="Add" asp-controller="Classroom" method="post">
            <div class="form-group">
                <label for="TeacherID" class="control-label">Teacher ID:</label>
                <input type="number" id="TeacherID" name="TeacherID" required />
            </div>
            <div class="form-group">
                <label for="GradeLevelID" class="control-label">GradeLevel ID:</label>
                <input type="number" id="GradeLevelID" name="GradeLevelID" required />
            </div>
            <div class="form-group">
                <label for="name" class="control-label">Name:</label>
                <input type="text" id="name" name="name" required />
            </div>
            <div class="form-group">
                <label for="quantity" class="control-label">Quantity:</label>
                <input type="quantity" id="quantity" name="quantity" required />
            </div>
          
            <button type="submit" name="Add" value="Add">Add Classroom</button>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>
