@model QLyHS1.Data.Classroom
@{
    ViewData["Title"] = "Hủy bỏ lớp học";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí học sinh</title>
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Delete.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
</head>
<!-- -------------------------------------- -->
<body class="body">
    <div class="table_Detail">
        <div class="Detail_form">
            <p>Chi tiết lớp học</p>
            <button onclick="window.location.href='@Url.Action("Index", "Classroom")'" class="btn-back">Quay lại</button>
        </div>
        <div class="detail-item">
            <strong>Khối:</strong> @Model.GrandLevel
        </div>
        <div class="detail-item">
            <strong>Lớp học:</strong> @Model.Name
        </div>
        <div class="detail-item">
            <strong>Số lượng:</strong> @Model.Quantity
        </div>
        <div class="detail-item">
            <strong>Trạng thái:</strong> @Model.Status
        </div>
        <div class="btn_form">
            <button class="btn-back btn_view" type="submit">Xóa</button>
        </div>
    </div>

</body>

</html>