@model IEnumerable<QLyHS1.Models.ClassroomViewModel>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý hồ sơ học sinh</title>
    <link rel="stylesheet" href="~/css/student.css">
</head>
<body>
    <div class="container">

        <div class="main-content">
            <h1>Hồ sơ lớp học</h1>

            <div class="search-container">
                <form name="SearchForm" asp-action="Search" asp-controller="Classroom">
                    <input type="text" placeholder="Tìm kiếm" name="query">
                    <button class="btn-search">Tìm kiếm</button>
                </form>
                <button class="btn-add" onclick="location.href='@Url.Action("Add", "Classroom")'">+</button>

                <button class="btn-refresh">⟲</button>
            </div>

            <table class="student-table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên lớp</th>
                        <th>Số lượng</th>
                        <th>Khối lớp</th>
                        <th>Giáo viên chủ nhiệm</th>
                
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int stt = 1;
                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@student.Name</td>
                                <td>@student.Quantity</td>
                                <td>@student.GrandLevelName</td>
                                <td>@student.TeacherName</td>
                             
                                <td>
                                    <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                                </td>
                            </tr>
                            stt++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Không có dữ liệu lớp học.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
