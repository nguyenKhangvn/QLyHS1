@model IEnumerable<QLyHS1.Models.TeacherViewModel>
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phân công giáo viên</title>
    <link rel="stylesheet" href="~/css/Teacher.css">
    <link rel="stylesheet" href="~/css/Base.css">

</head>
<style>

</style>

<body>
    <div class="container_form">

        <div class="main-content">
            <h1>Hồ sơ giáo viên</h1>

            <div class="filter-section">
                <div class="filter-group">
                    <label for="semester">Học kỳ:</label>
                    <select id="semester">
                        <option value="HK1">HK1</option>
                        <option value="HK2">HK2</option>
                    </select>

                    <label for="year">Niên khoá:</label>
                    <select id="year">
                        <option value="2022-2023">2022-2023</option>
                        <option value="2023-2024">2023-2024</option>
                        <option value="2024-2025">2024-2025</option>
                    </select>
                </div>

                <div class="search-group">
                    <form name="SearchForm" asp-action="Search" asp-controller="Teacher">
                        <input type="text" placeholder="Tìm kiếm" name="query">
                        <button class="btn-search">Tìm kiếm</button>
                    </form>
                    <button class="btn-add" onclick="location.href='@Url.Action("Add", "Teacher")'">+</button>
                </div>
            </div>

            <div class="list-container">
                <ul class="styled-top">
                        <li>STT</li>
                        <li>Giáo Viên</li>
                        <li>Tên môn học</li>
                        <li>Email</li>
                        <li>Sinh nhât</li>
                        <li>Địa chỉ</li>
                        <li>Số điện thoại</li>
                    </ul>
                <div class="styled-list">
                    @if (Model != null && Model.Any())
                    {
                        int stt = 1;
                        foreach (var teacher in Model)
                        {
                            <ul>
                                <li>@stt</li>
                                <li>@teacher.Name</li>
                                <li>@teacher.SubjectName</li>
                                <li>@teacher.Email</li>
                                <li>@teacher.DateOfBirth</li>
                                <li>@teacher.Address</li>
                                <li>@teacher.Phone</li>
                                <li>
                                    <a asp-action="Edit" asp-route-id="@teacher.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@teacher.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@teacher.Id">Delete</a>
                                </li>
                            </ul>
                            stt++;
                        }

                    }
                    else
                    {
                            <li colspan="7">Không có dữ liệu giáo viên.</li>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

</html>
