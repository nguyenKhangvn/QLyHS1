@model IEnumerable<QLyHS1.Models.TeacherViewModel>
@{
    ViewData["Title"] = "Phân công giáo viên";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí học sinh</title>
    <link rel="stylesheet" href="~/CSSP/Students.css">
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
</head>

<body class="body">      
            <div class="table-container">
                <div class="table_top">
                    <div class="group_top">
                        <form name="SearchForm" asp-action="Search" asp-controller="Student">
                            <input class="input_search" type="text" placeholder="Tìm kiếm" name="query">
                            <button class="btn-search"> <i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                        <button class="btn-add" onclick="">+</button>
                        <button class="btn-refresh">⟲</button>
                    </div>
                    <div class="group_top">
                        <a href="" class="btn-text">Xuất Excel</a>
                    </div>
                </div>
                <div class="table_form">
                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th class="wide">STT</th>
                                <th>Họ tên</th>
                                <th>Bộ môn</th>
                                <th>Năm sinh</th>
                                <th>Liên lạc</th>
                                <th>Thiết lập</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                int stt = 1;
                                foreach (var teacher in Model)
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td>@teacher.Name</td>
                                        <td>@teacher.SubjectName</td>
                                        <td>@teacher.DateOfBirth</td>
                                        <td>@teacher.Phone</td>
                                        <td>
                                            <div class="table_funtion">
                                                <a asp-action="Details" asp-route-id="@teacher.Id">Xem chi tiết</a>
                                                <p>|</p>
                                                <a asp-action="Edit" asp-route-id="@teacher.Id">Cập nhật thông tin</a>
                                                <p>|</p>
                                                <a asp-action="Delete" asp-route-id="@teacher.Id">Xóa</a>
                                            </div>
                                        </td>
                                    </tr>
                                    stt++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">Không có dữ liệu giáo viên.</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>

</body>

</html>