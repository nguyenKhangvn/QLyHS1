@model QLyHS1.Data.Teacher
@{
    ViewData["Title"] = "Chi tiết giáo viên";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí học sinh</title>
    <link rel="stylesheet" href="~/CSSP/Base.css">
    <link rel="stylesheet" href="~/CSSP/Hearder.css">
    <link rel="stylesheet" href="~/CSSP/Menu.css">
    <link rel="stylesheet" href="~/CSSP/Detail.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.7.1-web/css/all.min.css">
</head>

<body class="body">

            <!-- -------------------------------------- -->
            <div class="table_Detail">
                <div class="Detail_form">
                    <p>Chi tiết giáo viên</p>
            <button onclick="window.location.href='@Url.Action("Index", "Teacher")'" class="btn-back">Quay lại</button>
                </div>
                <div class="detail-item">
                    <strong>Họ và tên:</strong> @Model.Name
                </div>
                <div class="detail-item">
                    <strong>Tên môn học:</strong> @ViewBag.SubjectName
                </div>
                <div class="detail-item">
                    <strong>Tên đăng nhập:</strong> @Model.UserName
                </div>
                <div class="detail-item">
                    <strong>Email:</strong> @Model.Email
                </div>
                <div class="detail-item">
                    <strong>Ngày sinh:</strong> @Model.DateOfBirth.ToString("dd/MM/yyyy")
                </div>
                <div class="detail-item">
                    <strong>Số điện thoại:</strong> @Model.Phone
                </div>
                <div class="detail-item">
                    <strong>Địa chỉ:</strong> @Model.Address
                </div>
                <div class="detail-item">
                    <strong>Vai trò:</strong> @(Model.Role ? "Quản trị viên" : "Giáo viên")
                </div>
                <div class="detail-item">
                    <strong>Trạng thái:</strong> @(Model.Status ? "Hoạt động" : "Tạm dừng")
                </div>
                <div class="detail-item">
                    <strong>Ngày tạo:</strong> @Model.CreateAt.ToString("dd/MM/yyyy")
                </div>
                <div class="detail-item">
                    <strong>Cập nhật lần cuối:</strong> @Model.UpdateAt.ToString("dd/MM/yyyy")
                </div>
            </div>

</body>

</html>